<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/white"
        android:elevation="3dp"
        android:orientation="vertical"
        android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusable="true"
        android:weightSum="3">

        <TextView
            android:id="@+id/tv_Date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1.5"
            android:background="@drawable/border_am_pm"
            android:drawableLeft="@drawable/ic_leaves"
            android:drawablePadding="5dp"
            android:inputType="date"
            android:padding="7dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/tv_topicnodetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1.3"
            android:background="@drawable/border_am_pm"
            android:hint="Lesson Name."
            android:focusable="true"
            android:padding="7dp"
            android:digits="AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz"
            android:textSize="19dp"
            android:gravity="start"
            android:singleLine="true" />

        <View
            android:id="@+id/canceladdsubtopics"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.3"
            android:background="@drawable/ic_delete_black_24dp"
            android:clickable="false"
            android:padding="10dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>