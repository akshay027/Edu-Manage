<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.exalogic.edumanage.Activities.ParentActivities.ParentTimeTableActivity$PlaceholderFragment">

    <ListView
        android:id="@+id/lvDate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.3"
        android:layout_marginBottom="?attr/actionBarSize"
        android:choiceMode="singleChoice"
        android:drawSelectorOnTop="false"
        android:listSelector="@android:color/holo_purple" />

    <ListView
        android:id="@+id/lvPeriod"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/lvdate"
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_weight="0.7"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_noSchedule"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center"
        android:visibility="gone"
        android:text="NO SCHEDULE AVAILABLE FOR THIS DAY" />

</LinearLayout>
