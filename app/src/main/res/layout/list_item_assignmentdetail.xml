<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activities.TeacherActivities.AssignmentDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:elevation="3dp"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/rounded_view" />
            <TextView
                android:id="@+id/tv_studentName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.8"
                android:text="Shrey khanduri"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.2"
                android:gravity="right|center">

                <View
                    android:id="@+id/viewAssignmentcompletion"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@android:color/holo_red_dark"
                    android:padding="10dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bracket1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="("
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_parentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABCDEFGHIJKLMNO"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/bracket2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text=")"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">


            <TextView
                android:id="@+id/tv_contactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingTop="5dp"
                android:text=" 8792539553"
                android:textColor="#000000" />


            <ImageView
                android:id="@+id/call_parent"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_weight=".5"
                android:src="@drawable/ic_call_black_24dp" />

            <ImageView
                android:id="@+id/message_parent"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.5"
                android:src="@drawable/ic_text" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

